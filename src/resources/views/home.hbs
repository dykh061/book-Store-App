<div class="container py-5">
  <div class="row g-4 align-items-stretch">
    {{#each Products}}
      <div class="col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
          <img
            src="{{this.product_thumb}}"
            class="card-img-top"
            alt="{{this.product_name}}"
          />

          <!-- Overlay khi hover -->
          <div class="card-overlay">
            <div class="overlay-content">
              <p>{{this.product_description}}</p>
              <a href="/products/{{this._id}}" class="btn btn-primary mt-3">Xem
                chi tiết</a>
            </div>
          </div>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{this.product_name}}</h5>
            <p class="text-muted mb-1">Cửa hàng:
              {{this.product_shopId.UserName}}</p>
            <p class="price-tag">{{this.product_price}} ₫</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>